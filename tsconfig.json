{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "incremental": true,
    "target": "ES5",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declarationDir": "build",
    "outDir": "build",
    "types": [
      "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
